<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" prefHeight="288.0" prefWidth="351.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="main.maat.controller.ProjetoController">

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Cadastro de Projeto" GridPane.columnSpan="2" />

    <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nomeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="descricaoField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Data Início:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <DatePicker fx:id="dataInicioField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Data de Fim Prevista:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <DatePicker fx:id="dataPrevistaFimField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Data Fim:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker fx:id="dataFimField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button onAction="#salvarProjeto" text="Salvar Projeto" GridPane.columnSpan="2" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
